<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class=" text-center">Seus Contatos</h1>
      <p class="text-center lead">Gerencie seus contatos abaixo</p>
    </div>

    <%- include('includes/messages') %>

    <% if(contato._id) { %>
      <form class="needs-validation" novalidate action="/contato/edit/<%= contato._id %>" method="POST">
    <% } else { %>
      <form class="needs-validation" novalidate action="/contato/register" method="POST">
    <% } %>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

        <div class="form-group mb-3">
          <label for="nome" class="form-label">Nome:</label>
          <input 
            type="text" 
            class="form-control" 
            id="nome" 
            name="nome" 
            value="<%= contato.nome %>" 
            required>
          <div class="invalid-feedback">
            Por favor, informe o nome.
          </div>
        </div>

        <div class="form-group mb-3">
          <label for="sobrenome" class="form-label">Sobrenome:</label>
          <input 
            type="text" 
            class="form-control" 
            id="sobrenome" 
            name="sobrenome" 
            value="<%= contato.sobrenome %>">
        </div>

        <div class="form-group mb-3">
          <label for="email" class="form-label">E-mail:</label>
          <input 
            type="email" 
            class="form-control" 
            id="email" 
            name="email" 
            value="<%= contato.email %>" 
            required>
          <div class="invalid-feedback">
            Informe um e-mail válido.
          </div>
        </div>

        <div class="form-group mb-3">
          <label for="telefone" class="form-label">Telefone:</label>
          <input 
            type="tel" 
            class="form-control" 
            id="telefone" 
            name="telefone" 
            value="<%= contato.telefone %>" 
            required>
          <div class="invalid-feedback">
            Por favor, informe o telefone.
          </div>
        </div>

        <button type="submit" class="btn btn-primary">Salvar</button>
      </form>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>

<script>
// Validação Bootstrap personalizada
(() => {
  'use strict'
  const forms = document.querySelectorAll('.needs-validation')
  Array.from(forms).forEach(form => {
    form.addEventListener('submit', event => {
      if (!form.checkValidity()) {
        event.preventDefault()
        event.stopPropagation()
      }
      form.classList.add('was-validated')
    }, false)
  })
})()
</script>
